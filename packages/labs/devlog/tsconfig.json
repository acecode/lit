{
  "compilerOptions": {
    "composite": true,
    "target": "es2019",
    "module": "esnext",
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./development/",
    "rootDir": "./",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitOverride": true
  },
  "include": ["src/**/*.ts", "demo/**/*.ts"],
  "exclude": [],
  "references": [
    {
      "path": "../../lit-html"
    },
    {
      "path": "../../lit-element"
    },
    {
      "path": "../../reactive-element"
    },
    {
      "path": "../../lit"
    }
  ]
}
